<div class="container">
  <div class="mt-4">
  <div class="row">
    {{#each courses}}
      <div class="col-sm-6 col-lg-4">
        <div class="card" >
          <img src="{{this.image}}" style="height: 250px;" class="card-img-top" alt="..." />
          <div class="card-body">
            <h5 class="card-title" style="color: blue;">{{this.name}}</h5>
            <p class="card-text">{{this.description}}</p>
            <a href="/course/{{this.slug}}" class="btn btn-primary">Detail</a>    
          </div>
        </div>
      </div>
    {{/each}}
  </div>
</div>
</div>